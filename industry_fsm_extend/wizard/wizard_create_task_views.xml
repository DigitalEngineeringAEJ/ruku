<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_create_task_form" model="ir.ui.view">
        <field name="name">wizard.create.task.form</field>
        <field name="model">wizard.create.task</field>
        <field name="arch" type="xml">
            <form delete="0" create="0" edit="0">
                <group col="2">
                    <field name="name" required="1"/>
                    <field name="user_id" options="{'no_create_edit': True}" required="1"/>
                    <field name="date_installation" required="1"/>
                </group>
                <footer>
                    <button name="create_task"
                            string="Confirm"
                            type="object"
                            class="btn-success"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_create_task_action" model="ir.actions.act_window">
        <field name="name">Assigned task</field>
        <field name="res_model">wizard.create.task</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_create_task_form"/>
        <field name="target">new</field>
    </record>


</odoo>