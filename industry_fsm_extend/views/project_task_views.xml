<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Make invoice button and quotation button invisible if not approved -->
    <record id="view_task_form2_inherit_industry_fsm_extend" model="ir.ui.view">
        <field name="name">view.task.form2.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="industry_fsm_sale.view_task_form2_inherit"/>
        <field name="arch" type="xml">
           <xpath expr="//button[@name='action_create_invoice'][hasclass('btn-primary')]" position="attributes">
               <attribute name="attrs">{'invisible': ['|', ('display_create_invoice_primary', '=', False), ('is_approved', '=', False)]} </attribute>
           </xpath>
          <xpath expr="//button[@name='action_create_invoice'][hasclass('btn-secondary')]" position="attributes">
               <attribute name="attrs">{'invisible': ['|', ('display_create_invoice_secondary', '=', False), ('is_approved', '=', False)]} </attribute>
           </xpath>
            <xpath expr="//button[@name='action_fsm_create_quotation'][hasclass('btn-secondary')]" position="attributes">
               <attribute name="attrs">{'invisible': ['|', ('allow_quotations', '=', False), ('is_approved', '=', False)]} </attribute>
           </xpath>
        </field>
    </record>
      <!-- Make buttons if not approved -->
     <record id="view_task_form2_inherit_view_task_form2_inherit_extend" model="ir.ui.view">
            <field name="name">view.task.form2.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="industry_fsm_report.view_task_form2_inherit"/>
             <field name="arch" type="xml">
                  <button name="action_timer_start" position="attributes">
                      <attribute name="attrs">{'invisible': ['|', '|',('display_timer_start_primary', '=', False), ('encode_uom_in_days', '=', True), ('is_approved', '=', False)]} </attribute>
                  </button>

                 <button name="action_timer_stop" position="attributes">
                     <attribute name="attrs"> {'invisible': ['|','|', ('display_timer_stop', '=', False), ('encode_uom_in_days', '=', True), ('is_approved', '=', False)]}</attribute>
                 </button>
                 <button name="action_timer_pause" position="attributes">
                     <attribute name="attrs"> {'invisible': ['|','|', ('display_timer_pause', '=', False), ('encode_uom_in_days', '=', True), ('is_approved', '=', False)]}</attribute>
                 </button>
                  <button name="action_timer_resume" position="attributes">
                     <attribute name="attrs">{'invisible': ['|', '|',('display_timer_resume', '=', False), ('encode_uom_in_days', '=', True), ('is_approved', '=', False)]}</attribute>
                 </button>

                 <xpath expr="//button[@name='action_fsm_validate'][hasclass('btn-primary')]" position="attributes">
                     <attribute name="attrs">{'invisible': ['|', ('display_mark_as_done_primary', '=', False), ('is_approved', '=', False)]}</attribute>
                 </xpath>
                  <xpath expr="//button[@name='action_fsm_validate'][hasclass('btn-secondary')]" position="attributes">
                      <attribute name="attrs">{'invisible': ['|', ('display_mark_as_done_secondary', '=', False), ('is_approved', '=', False)]} </attribute>
                  </xpath>
                  <xpath expr="//button[@name='action_preview_worksheet'][hasclass('btn-primary')]" position="attributes">
                     <attribute name="attrs">{'invisible': ['|', ('display_sign_report_primary', '=', False), ('is_approved', '=', False)]}</attribute>
                 </xpath>
                   <xpath expr="//button[@name='action_send_report'][hasclass('btn-primary')]" position="attributes">
                     <attribute name="attrs">{'invisible': ['|', ('display_send_report_primary', '=', False), ('is_approved', '=', False)]}</attribute>
                 </xpath>
                 <xpath expr="//button[@name='action_preview_worksheet'][hasclass('btn-secondary')]" position="attributes">
                      <attribute name="attrs">{'invisible': ['|', ('display_sign_report_secondary', '=', False), ('is_approved', '=', False)]} </attribute>
                  </xpath>

                 <xpath expr="//button[@name='action_send_report'][hasclass('btn-secondary')]" position="attributes">
                      <attribute name="attrs">{'invisible': ['|', ('display_send_report_secondary', '=', False), ('is_approved', '=', False)]} </attribute>
                  </xpath>

                 <header position="inside">
                      <button class="btn-primary" name="action_approve" attrs="{'invisible':['|', '|', ('is_rejected', '=', True), ('is_approved', '=', True), ('sequence', '!=', 1)]}" type="object" string="Approve"/>
                      <button class="btn-primary btn-danger" name="action_rejected" attrs="{'invisible':['|', '|', ('is_rejected', '=', True), ('is_approved', '=', True), ('sequence', '!=', 1)]}" type="object" string="Reject"/>
                      <field name="is_approved" invisible="1"/>
                     <field name="is_rejected" invisible="1"/>
                     <field name="sequence" invisible="1"/>
                 </header>
                  <div name="button_box" position="after">
                      <widget name="web_ribbon" title="Rejected" bg_color="bg-danger" attrs="{'invisible': [('is_rejected', '=', False)]}"/>
                      <widget name="web_ribbon" title="Approved" bg_color="bg-success" attrs="{'invisible': [('is_approved', '=', False)]}"/>
                  </div>
             </field>

     </record>

</odoo>